<body>
    <form class="form-signin" id='new_session' action='/login' accept-charset='UTF-8' method='post'>
        <div class="text-center mb-4">
            <img class="mb-4" src="/images/Naruto.jpg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">My Blog</h1>
        </div>

        <div class="form-label-group">
            <input type="email" name='user_name' id='session_email_or_mobile_number' value="birdbiena@gmail.com"  class="form-control" placeholder="Email address" required="" autofocus="">
            <label for="inputEmail">Email address</label>
        </div>

        <div class="form-label-group">
            <input type="password" name='password' id='session_password' value="123123a@1." class="form-control" placeholder="Password" required="">
            <label for="inputPassword">Password</label>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" id='sign-in-form-submit-btn' type="button">Sign in</button>
        <p class="mt-5 mb-3 text-muted text-center">© 2018-2019</p>
    </form>

    <script>
        (function(win, doc, $) {
            $('#sign-in-form-submit-btn').on('click', event => {
                $.post('/login', {
                    user_name: $('#session_email_or_mobile_number').val(),
                    password: $('#session_password').val()
                }).then(response => {
                    if (response.code) {
                        localStorage.setItem('Authorization', response.data.token);
                        win.location.href = '/';
                    } else {
                        alert(response.msg);
                    }
                }).catch(error => {
                    console.log('error :', error);
                });
            });
        })(window, document, jQuery);
    </script>
</body>
